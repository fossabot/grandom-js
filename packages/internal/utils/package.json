{
  "name": "utils",
  "version": "0.0.0-development",
  "description": "Internal utils.",
  "private": true,
  "engines": {
    "node": ">= 16"
  },
  "ts-standard": {
    "ignore": [
      "*.config.js"
    ]
  },
  "scripts": {
    "generate:tsconfig": "ts-node src/generate/tsconfig",
    "//": "-------------------------------------------------------------------",
    "start": "npm test -- --watchAll",
    "fix:lint": "ts-standard --verbose --fix | snazzy",
    "check": "npm run check:commits && npm run check:lint",
    "///": "------------------------------------------------------------------",
    "check:commits": "commitlint --from $(git rev-parse --short HEAD^1) --to $(git rev-parse --short HEAD^2) --verbose",
    "check:lint": "ts-standard --verbose | snazzy",
    "check:types": "echo \"skip\"",
    "check:test": "echo \"skip\"",
    "test": "echo \"skip\"",
    "prep": "echo \"skip\""
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@tsconfig/node16": "^16.1.1",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^16.18.38",
    "@types/semantic-release": "^20.0.1",
    "execa": "^5.1.1",
    "fs-extra": "^11.1.1",
    "semantic-release": "^19.0.5",
    "semantic-release-monorepo": "^7.0.5",
    "snazzy": "^9.0.0",
    "string-dedent": "^3.0.1",
    "ts-node": "^10.9.1",
    "ts-standard": "^12.0.2",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.6.2",
    "typescript": "^4.9.4"
  }
}
