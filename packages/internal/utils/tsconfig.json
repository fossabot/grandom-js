{
  "extends": "@tsconfig/node16/tsconfig.json",

  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "files": true
  },

  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@":   ["src"],
      "@/*": ["src/*"],
      "@utils":   ["src/utils"],
      "@utils/*": ["src/utils/*"],
    }
  },

  "include": [
    "**/*.ts"
  ],

  "exclude": [
    "node_modules"
  ]
}
